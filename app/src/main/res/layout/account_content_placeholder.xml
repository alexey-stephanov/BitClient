<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/placeholder_account_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/placeholder_account_display_name"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_margin="24dp"
        android:background="@color/gray_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/placeholder_account_username"
        app:layout_constraintStart_toEndOf="@+id/placeholder_account_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/placeholder_account_username"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        android:background="@color/gray_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/placeholder_account_icon"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_account_display_name" />

    <View
        android:id="@+id/placeholder_account_creation_day"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_account_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>