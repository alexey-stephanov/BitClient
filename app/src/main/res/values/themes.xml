<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BitClient" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryVariant">@color/blue_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/peach_800</item>
        <item name="colorSecondaryVariant">@color/orange_900</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/red_700</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.BitClient.Launcher" parent="Theme.BitClient">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:elevation">@dimen/toolbar_light_elevation</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="android:elevation">@dimen/bottom_navigation_view_light_elevation</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="AppNameTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?colorPrimary</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="HomeTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="ButtonItemTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.ImageCornersSize" parent="">
        <item name="cornerSize">25%</item>
    </style>
</resources>